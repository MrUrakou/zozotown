          .center__contents_campain
            %li
              = image_tag "img01.jpg"
            / %h5.center__contents_campain-title campain
            / %hr.center__contents_campain-line
            / .center__contents_campain__top
            /   - @campain_products.each do |product|
            /     .center__contents_campain__top-product
            /       = link_to image_tag(product.image), detail_product_path(product)
            /       %p.center__contents_campain_product-title
            /         = product.name
            /       %p.center__contents_campain_product-price
          .center__contents_campain
            %h5.center__contents_campain-title キャンペーン
            %hr.center__contents_campain-line
            .center__contents_campain__top
              / - @recommend_products.each do |product|
              /   .center__contents_campain__top-product
              /     = link_to image_tag(product.image), detail_product_path(product)
              /     %p.center__contents_campain_product-title
              /       = product.name
              /     %p.center__contents_campain_product-price
          .center__contents_campain
            %h5.center__contents_campain-title コーディネート
            %hr.center__contents_campain-line
            .center__contents_campain__top
              .center__contents_campain__top-product
              / .center__contents_campain__top-product
              / .center__contents_campain__top-product
              / .center__contents_campain__top-product
              / .center__contents_campain__top-product
              / .center__contents_campain__top-product
      .right__contents
        / .right__contents_sale
        /   / = image_tag 'roto.jpeg', class: "right-contents-top-pop"
        /   .roto-mask
        /     .roto-caption 非売品
        .right__contents_shop-news-title ショップニュース
        .right__contents_shop-news-list
          / = image_tag 'banana.jpeg', class: "right-contents-shop-pop"
          .right__contents_shop-news-detail
            %p.shop-news-detail_title agnes b.
            %p.shop-news-detail_description おすすめアイテム
        = render partial: "shop-list"
